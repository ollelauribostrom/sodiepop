{
  "name": "sodiepop",
  "version": "1.2",
  "description": "Copies the last part of the url to the clipboard each time a new page loads.",
  "background": {
    "scripts": ["sodiepop.js"],
    "persistent": false
  },
  "permissions": [
    "tabs"
   ],
  "browser_action": {
    "default_icon": "icons/icon16-inactive.png",
    "default_title": "Activate sodiepop"
  },
   "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
